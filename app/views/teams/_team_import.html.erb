<h2 class='centerheader'>Choose a team to import</h2>

<table class='teams'>
  <tr>
    <th>League</th>
    <th>Team Name</th>
    <th>Imported?</th>
  </tr>

  <% if current_user.teams.empty? %>
    <tr><td colspan='3'>No fantasy teams found for the 2017 season!</td></tr>
  <% else %>
    <% current_user.teams.each do |team| %>
      <tr>
        <td><%= team.league.name %></td>
        <td><%= team.name %></td>
        <% if team.imported %>
          <td> <%= fa_icon 'check-square-o' %> </td>
        <% else %>
          <td><%= button_to [:import, team.league], class: "importButton" do%>Import Now<% end %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
