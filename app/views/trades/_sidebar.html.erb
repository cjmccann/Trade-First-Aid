<div class='outerSidebarContainer'>
  <div class='summary-container'>
    <div class='sidebarHeader' id='summary-header'>
      Trade Summary
    </div>
    <%= render 'trade_summary_table' %>
  </div>

  <div class='spacer'></div>
</div>


<div class='innerSidebarContainer'>
  <hr/>
  <div class='sidebarHeader'>Players to receive:</div>
  <% @table_id = 'playersReceived' %>
  <%= render 'players_traded_table' %>
  <div class='sidebarHeader'>Players to trade:</div>
  <% @table_id = 'playersTraded' %>
  <%= render 'players_traded_table' %>

  <div class='sidebarButtons'>
    <div class='sidebar button'>
      <button id="tradeReset" class="btn btn-default btn-primary btn-outline sidebarButton">Reset</button>
    </div>
    <div class='sidebar button'>
      <% if @demo %>
        <%= link_to 'Back', root_path, type: 'button', class: "btn btn-default btn-primary btn-outline sidebarButton" %>
      <% else %>
        <%= link_to 'Back', team_path(@my_team), type: 'button', class: "btn btn-default btn-primary btn-outline sidebarButton" %>
      <% end %>
    </div>
  </div>
</div>
