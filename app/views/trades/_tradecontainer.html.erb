<div id='tradeContainer'>
  <div id='sidebar'>
    <%= render 'sidebar' %>
  </div>
  <div id='teamContainer'>
    <div id='teams'>
      <div class='team left'>
        <% @cur_team = @my_team %>
        <%= render 'team_header' %>
        <%= render 'team_table' %>
      </div>
      <div class='team right'>
        <% @cur_team = @other_team %>
        <%= render 'team_header' %>
        <%= render 'team_table' %>
      </div>
    </div>
    <%= render 'standings_table' %>
  </div>
</div>

<div id="dataContainer">
  <div id='tradeData' 
            data-my-team='<%= @my_team.name %>' 
            data-other-team='<%= @other_team.name %>'
            data-teams='<%= @league.team_id_map.to_json %>'
            data-player-stats='<%= @league.player_stats.to_json %>'
            data-traded-players='<%= @traded_players %>'>
  </div>
</div>
