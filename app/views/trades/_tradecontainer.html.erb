<div id='tradeContainer'>
  <div id='sidebar'>
    <%= render 'sidebar' %>
  </div>
  <div id='teamContainer'>
    <h2 class="centerheader">Create a Trade</h2>
    <div class='team left'>
      <% @cur_team = @my_team %>
      <h3 class="centerheader"><%= @cur_team.name %></h3>
      <%= render 'team_table' %>
    </div>
    <div class='team right'>
      <% @cur_team = @other_teams.first %>
      <h3 class="centerheader"><%= @cur_team.name %></h3>
      <%= render 'team_table' %>
    </div>
    <div id='standings'>
      <h2 class="centerheader">Projected Stats and Points</h3>
      <%= render 'standings_table' %>
    </div>
  </div>
</div>

<div id="dataContainer">
  <div id='tradeData' 
            data-my-team='<%= @my_team.name %>' 
            data-other-team='<%= @other_teams.first.name %>'
            data-teams='<%= @league.team_id_map.to_json %>'
            data-player-stats='<%= @league.player_stats.to_json %>'>
  </div>
</div>
